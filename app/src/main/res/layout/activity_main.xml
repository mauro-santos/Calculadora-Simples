<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.maurosantos.android.calculadora.MainActivity">

    <TextView
        android:id="@+id/lblValor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_valor1"
        android:textSize="@dimen/lbl_valor" />

    <EditText
        android:id="@+id/edtValor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_valor1"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/lblValor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_valor2"
        android:textSize="@dimen/lbl_valor" />

    <EditText
        android:id="@+id/edtValor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_valor2"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_calcular" />
</LinearLayout>
